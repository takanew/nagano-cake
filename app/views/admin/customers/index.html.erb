<h1>会員一覧</h1>

<table>
  <thread>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thread>
  
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <!--変数展開#{}の活用　""で囲み変数展開を有効化-->
      <td><%= "#{customer.last_name} #{customer.first_name}" %></td>
      <td><%= customer.email %></td>
      <td>
        <% if customer.is_active %>
          有効
        <% else %>
          退会
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @customers %>