 <h2>商品編集</h2>
 <%= form_with(model: @item, url: admin_item_path(@item), method: :patch) do |form| %>

  <div class="field">
    <%= form.label :item_image, "商品画像" %>
    <%= form.file_field :item_image %>
  </div>

  <div class="field">
    <%= form.label :name, "商品名" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :introduction, "商品説明" %>
    <%= form.text_area :introduction %>
  </div>

  <div class="field">
    <%= form.label :price, "税抜価格" %>
    <%= form.text_field :price %>
  </div>

  <div class="actions">
    <%= form.submit "変更を保存" %>
  </div>

<% end %>
