<h1>注文履歴一覧</h1>

<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>注文商品</th>
      <th>支払い金額</th>
      <th>注文詳細</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <% order.order_items.each do |item| %>
            <%= item.item.name %><br>
          <% end %>
        </td>
        <td>
          <% total_price = 0 %>
          <% order.order_items.each do |item| %>
            <% total_price += item.purchase_price * item.amount %>
          <% end %>
          <%= total_price + 800 %>円
        </td>
        <td><%= link_to '表示', order_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>