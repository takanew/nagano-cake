<h1>注文詳細</h1>

<h2>注文情報</h2>
<table>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  
  <tr>
    <th>配送先</th>
    <td><%= @order.order_address %></td>
  </tr>
  
  <tr>
    <th>支払い方法</th>
    <td><%= Order.payment_methods_i18n[@order.payment_method] %></td>
  </tr>
</table>

<h2>請求情報</h2>
<table>
  <tr>
    <th>商品合計</th>
    <td>
      <%= @order.payment_amount %>円
    </td>
  </tr>
  <tr>
    <th>送料</th>
    <td><%= @order.postage %>円</td>
  </tr>
  <tr>
    <th>ご請求額合計</th>
    <td><%= @order.payment_amount + @order.postage %>円</td>
  </tr>
</table>

<h2>注文内容</h2>
<table>
  <tr>
    <th>商品</th>
    <th>単価</th>
    <th>個数</th>
    <th>小計</th>
  </tr>
  <% @order.order_items.each do |item| %>
    <tr>
      <td><%= item.item.name %></td>
      <td><%= item.item.with_tax_price %>円</td>
      <td><%= item.amount %>個</td>
      <td><%= item.item.with_tax_price * item.amount %>円</td>
    </tr>
  <% end %>
</table>